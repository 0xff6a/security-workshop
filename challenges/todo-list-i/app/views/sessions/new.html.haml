%h1 Log in

=form_tag session_path, class: 'auth' do
  .field
    .form-group
      =label_tag :email
      =text_field_tag :email, params[:email], class: 'form-control'

  .field
    .form-group
      =label_tag :password
      =password_field_tag :password, '', class: 'form-control'

  .actions=submit_tag "Log in", class: 'btn btn-primary'

=link_to "Forgot password?", new_password_reset_request_path
