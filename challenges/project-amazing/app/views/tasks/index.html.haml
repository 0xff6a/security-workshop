%h1 Listing tasks

%table.table.table-bordered.table-condensed
  %tr
    %th Title
    %th Description
    %th Created at
    %th
    %th
    %th

  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.description
      %td= task.created_at
      %td= link_to 'Show', task, class: 'btn btn-primary'
      %td= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary'
      %td= link_to 'Destroy', task, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Task', new_task_path
